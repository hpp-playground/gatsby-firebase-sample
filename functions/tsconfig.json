{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2017",
    "lib": ["dom", "esnext"],
    "typeRoots": ["node_modules/@types", "../node_modules/@types"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["src"],
  "compileOnSave": true
}
